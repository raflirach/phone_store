<%- include('../_partial/header.ejs') %>
<h4><%= data[0].Customer.getFullName() %></h4>
    <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Status</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(e => { %>
                <tr>
                    <td><%= e.Products[0].name %> </td>
                    <td><img src="/uploads/<%= e.Products[0].img %>" width="100px"></td>
                    <td><%= e.status %></td>
                    <td><%= e.getDate() %> </td>
                </tr>
            <% }) %>  
        </tbody>
    </table>

<%- include('../_partial/footer.ejs') %> 