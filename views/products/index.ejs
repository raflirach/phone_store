<%- include('../_partial/header.ejs') %>
    <div class="d-flex justify-content-center">
        <a href="/products/add" class="btn btn-primary">Add Product</a>
    </div>
    <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(e => { %>
                <tr>
                    <td><%= e.name %> </td>
                    <td><%= e.price %></td>
                    <td><%= e.stock %></td>
                    <td align="center"><img src="/uploads/<%= e.img %>" width="100px"></td>
                    <td align="center">
                        <a href="/products/edit/<%= e.id %>"><i class="fa fa-wrench"></i></a>
                        <a href="/products/delete/<%= e.id %>"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            <% }) %>  
        </tbody>
    </table>

<%- include('../_partial/footer.ejs') %> 